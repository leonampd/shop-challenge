{% extends 'base.html.twig' %}

{% block title %}[Checkout] ShopChallenge{% endblock %}

{% block body %}
    <div class="panel panel-default cart">
        <div class="panel-heading">
            <div class="panel-title">
                <h4><span class="glyphicon glyphicon-shopping-cart"></span> Carrinho de compras</h4>
            </div>
        </div>
        <div class="panel-body">
            {% for product in products %}
                <div class="row produto-row">
                    <div class="produto">
                        <div class="col-md-2">
                            <img class="img-responsive" src="{{ product.featuredImage }}" alt="{{ product.name }}">
                        </div>
                        <div class="col-md-6 infos">
                            <h4>{{ product.name }}</h4>
                            <p>{{ product.description }}</p>
                            <p>Vendido e entregue por <span class="vendido_entregue_por">{{ product.seller.name }}</span></p>
                        </div>
                        <div class="col-md-4">
                            <div class="col-md-6">R$ {{ product.value|number_format(2, ',', '.') }}</div>
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input value="1" type="number" class="form-control" aria-describedby="basic-addon2">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="panel-footer">
            <div class="row text-center">
                <div class="col-xs-9">
                    <h4 class="text-right">Total <strong>R$ 375,00</strong></h4>
                </div>
                <div class="col-xs-3">
                    <button type="button" class="btn btn-success btn-block">
                        Finalizar compra
                    </button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
